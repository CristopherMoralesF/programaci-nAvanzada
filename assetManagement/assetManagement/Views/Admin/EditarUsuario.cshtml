@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Editar Usuario</h2>

<form asp-controller="AdminController" asp-action="EditUser" method="post">
    <div class="form-group">
        <label for="nombre">Nombre:</label>
        <input type="text" class="form-control" id="nombre" name="NOMBRE" placeholder="Ingrese el nombre del usuario" value="@Model.NOMBRE" required>
    </div>
    <div class="form-group">
        <label for="correo">Correo:</label>
        <input type="email" class="form-control" id="correo" name="CORREO" placeholder="Ingrese el correo electrónico" value="@Model.CORREO" required>
    </div>
    <div class="form-group">
        <label for="rol">Rol:</label>
        <input type="text" class="form-control" id="rol" name="ID_ROLE" placeholder="Ingrese el rol del usuario" value="@Model.ID_ROLE" required>
    </div>
    <div class="form-group">
        <label for="estado">Estado:</label>
        <input type="text" class="form-control" id="estado" name="ESTADO" placeholder="Ingrese el estado del usuario" value="@Model.ESTADO" required>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
