@model UsuariosEnt
@using assetManagementClassLibrary

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Agregar Usuario</h2>

<form asp-controller="Admin" asp-action="AddUser" method="post">
    <div class="form-group">
        <label asp-for="nombre"></label>
        <input asp-for="nombre" class="form-control" placeholder="Ingrese el nombre del Usuario" />
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="correo"></label>
        <input asp-for="correo" class="form-control" placeholder="Ingrese el correo electrónico del Usuario" />
        <span asp-validation-for="correo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="contraseña"></label>
        <input asp-for="contraseña" class="form-control" placeholder="Ingrese la contraseña del Usuario" />
        <span asp-validation-for="contraseña" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="idRole"></label>
        <input asp-for="idRole" class="form-control" placeholder="Ingrese el rol ID del Usuario" />
        <span asp-validation-for="idRole" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="role"></label>
        <input asp-for="role" class="form-control" placeholder="Ingrese el nombre del rol del Usuario" />
        <span asp-validation-for="role" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-4">Agregar Usuario</button>
</form>
