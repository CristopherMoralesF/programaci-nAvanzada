@model assetManagementClassLibrary.loginUsuarioEnt

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}

<div class="row align-self-center justify-content-center">

    <div class="col-lg-2">
        <img src="~/templates/assets/img/Login img.png" alt="Manejo de Activos Log In" style="width: 100%" />
    </div>

    <div class="col-lg-4 align-self-center">
        <div class="container">
            <h4>Iniciar Sesión</h4>

            <form asp-action="Principal">
                <div class="form-group">
                    <input asp-for="correo" class="form-control mt-2" required placeholder="Correo Electronico"/>
                </div>
                <div class="form-group">
                    <input asp-for="contraseña" class="form-control mt-2" required type="password" placeholder="Contraseña"/>
                </div>
               <div class="mt-3">
                    <div style="color: red">
                        @ViewBag.mensajeError
                    </div>
                    <input type="submit" class="btn btn-block btn-secondary btn-lg font-weight-medium auth-form-btn" value="Iniciar Sesión">
                </div>

                <div class="text-center mt-4 font-weight-light">
                    <a href="@Url.Action("recuperarContraseña", "Home")" class="text-secondary">¿Olvidó su contraseña?</a>
                </div>

            </form>

        </div>
    </div>

</div>