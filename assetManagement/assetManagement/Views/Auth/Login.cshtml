<!-- Views/Auth/Login.cshtml -->
@{
    Layout = "~/Views/Shared/_Layout_login.cshtml";
    ViewData["Title"] = "Sistema de Manejo de Activos";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
 
</head>
<body>
    

    <div class="row align-self-center justify-content-center">

        <div class="col-lg-2">
            <img src="~/templates/assets/img/Login img.png" alt="Manejo de Activos Log In" style="width: 100%" />
        </div>

        <div class="col-lg-4 align-self-center">
            <div class="container">
                <h4>Iniciar Sesión</h4>
                @if (TempData["ErrorMessage"] != null)
                {
                    <p class="error-message text-danger">@TempData["ErrorMessage"]</p>
                }

                <form asp-action="Login" method="post">
                    <label for="email">Correo:</label>
                    <br>
                    <input type="email" id="email" name="email" title="Ingrese un correo electrónico válido" required />
                    <br>
                    <label for="password">Contrasena:</label>
                    <br>
                    <input type="password" id="password" name="password" required />
                    <br>

                    <button type="submit" class="btn btn-secondary mt-3">Ingresar</button>
                </form>

            </div>
        </div>

    </div>
</body>
</html>
